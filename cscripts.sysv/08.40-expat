. /cscripts/env.sh

cd /sources

tar -xf expat-2.7.1.tar.xz

cd expat-2.7.1

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/expat-2.7.1

make


if [[ "$ULFS_TESTS" == "YES" ]]
then

make check

fi


make install


if [[ "$ULFS_DOCS" == "YES" ]]
then
install -v -m644 doc/*.{html,css} /usr/share/doc/expat-2.7.1
fi
