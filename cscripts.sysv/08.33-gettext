. /cscripts/env.sh

cd /sources

tar -xf gettext-0.26.tar.xz

cd gettext-0.26

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/gettext-0.26

make


if [[ "$ULFS_TESTS" == "YES" ]]
then
make check
fi


make install
chmod -v 0755 /usr/lib/preloadable_libintl.so


